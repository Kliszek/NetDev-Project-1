<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head.ejs') %> 

<body class="bg-slate-50">

    <div class="relative min-h-screen pb-20" id="wrapper">
        
        <%- include('./partials/header.ejs') %>
        <%- include('./partials/nav.ejs') %>

        <main>
            <!-- <div class="ml-20 mt-20 pb-8 border-l-8 border-green-600">
                <h1 class="font-semibold inline-block tracking-wider p-5 ml-8 text-5xl border-b-2 border-slate-200">Recent photos:</h1>
            </div> -->
            <div class="m-20 pb-8 border-l-8 border-green-600">
                <h1 class="font-semibold inline-block tracking-wider p-5 ml-8 mb-10 text-5xl border-b-2 border-slate-200">Browse photos:</h1>
                <div class="bg-slate-100 p-5 rounded-tr-xl text-center border-r-4 border-slate-300">
                    <h1 class="font-rubik font-light inline-block tracking-wider md:px-20 text-2xl border-b-2 border-slate-200">Most Recent:</h1>
                </div>
                <hr>
                <div class="bg-blue-50 pl-2 border-r-4 border-slate-300 grid md:grid-cols-2 lg:grid-cols-3 gap-6">
                    
                    <% if(photoList == null) { %>
                        <h1 class="m-20 text-3xl">Connection to the database could not be established</h1>
                    <% } %>
                    
                    <% if(photoList.length > 0) { %>
                        <% photoList.forEach(photo => { %>
                            
                            <a href="/photo/<%= photo.id %>" class="card">
                                <img class="rounded mx-auto object-cover object-center w-full max-h-65pr mb-6" src="<%= photo.uri %>" alt="the photo">
                                <hr>
                                <h6 class="font-semibold my-5 text-lg"><%= photo.title %></h6>
                                <p class="overflow-hidden overflow-ellipsis text-justify"><%= photo.description %></p>
                            </a>

                        <% }); %>
                    <% } else { %>
                        <h1 class="m-20 text-3xl">There are no photos to display</h1>
                    <% } %>
                    
                </div>
            </div>
            

        </main>

        <%- include('./partials/footer.ejs') %>
    </div>

</body>
</html>